<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMAD_Sorts.MainPage"
             BackgroundColor="Black">

    <VerticalStackLayout 
        Spacing="25" 
        Padding="30,0" 
        VerticalOptions="Center">
        <HorizontalStackLayout x:Name ="horizSL"
                               HorizontalOptions="Center"
                               Spacing="1"
                               VerticalOptions="End"
                               HeightRequest="210">
        </HorizontalStackLayout>
        <HorizontalStackLayout Spacing="5"
                               HorizontalOptions="Center">
            <Button x:Name="genValueBtn" 
                Text="Generate Values" 
                Clicked="GenerateValues" />

            <Button x:Name="bubbleBtn" 
                Text="Bubble Sort" 
                Clicked="BubbleSort" />

            <Button x:Name="selectBtn" 
                Text="Selection Sort" 
                Clicked="SelectionSort" />

            <Button x:Name="insertBtn" 
                Text="Insertion Sort" 
                Clicked="InsertionSort" />
        </HorizontalStackLayout>
    </VerticalStackLayout> 
</ContentPage>
